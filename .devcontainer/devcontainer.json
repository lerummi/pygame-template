{
  "name": "Pygame Template",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Pygbag Server",
      "onAutoForward": "openBrowserOnce",
      "protocol": "http"
    },
    "4390": {
      "label": "VS Code Server",
      "onAutoForward": "ignore"
    }
  },
  "postCreateCommand": "echo 'application/wasm wasm' | tee -a /etc/mime.types",
  "postStartCommand": "nohup bash -c '/workspace/watch-and-reload.sh' > /tmp/pygbag.log 2>&1 & sleep 2",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter"
      ]
    },
    "codespaces": {
      "openFiles": []
    }
  },
  "remoteUser": "root"
}
