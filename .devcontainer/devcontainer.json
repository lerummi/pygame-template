{
  "name": "Python 3.13 with uv",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",
  "features": {
    "ghcr.io/va-h/devcontainers-features/uv:1": {}
  },
  "mounts": [
    "source=${localWorkspaceFolder}/pyproject.toml,target=/workspace/pyproject.toml,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/uv.lock,target=/workspace/uv.lock,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "UV_LINK_MODE": "copy",
    "UV_SYSTEM_PYTHON": "1"
  },
  "postCreateCommand": "uv sync",
  "forwardPorts": [
    8000
    ],
  "postAttachCommand": "uv run -- pygbag --bind 0.0.0.0 --port 8000 --cdn https://pygame-web.github.io/archives/0.9/ /workspaces/pygame-template/app",
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python"
      }
    }
  },
  "remoteUser": "vscode"
}
