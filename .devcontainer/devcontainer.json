{
  "name": "Python 3.13 with uv",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",
  "features": {
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false
    }
  },
  "remoteEnv": {
    "UV_LINK_MODE": "copy",
    "UV_SYSTEM_PYTHON": "1"
  },
  "postCreateCommand": "uv sync && echo 'application/wasm wasm' | sudo tee -a /etc/mime.types",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Pygbag Server",
      "onAutoForward": "openBrowser"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/pygame-template/.venv/bin/python"
      }
    }
  },
  "remoteUser": "vscode"
}
