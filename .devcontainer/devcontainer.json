{
  "name": "Pygame Template with Docker Compose",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "pygbag",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false
    }
  },
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Pygbag Server",
      "onAutoForward": "openBrowser",
      "protocol": "http"
    }
  },
  "postCreateCommand": "echo 'application/wasm wasm' | sudo tee -a /etc/mime.types || true",
  "postStartCommand": "sleep 3 && curl -s http://localhost:8000 > /dev/null || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "ms-toolsai.jupyter"
      ]
    },
    "codespaces": {
      "openFiles": []
    }
  },
  "remoteUser": "root"
}
